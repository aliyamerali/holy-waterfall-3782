<h1>Flights Index</h1>

<% @flights.each do |flight| %>
<div class="flight-<%=flight.id%>">
  <h3>Flight Number: <%= flight.number %> with <%= flight.airline.name %></h3>
  <p>Passengers:</p>
  <ul>
    <% flight.passengers.each do |passenger| %>
      <li><%= passenger.name %></li>
    <% end %>
  </ul>
</div>

<% end %>
